<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.lab8.ui.home.HomeFragment"
        android:label="Личный кабинет"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_weather"
        android:name="com.example.lab8.ui.gallery.GalleryFragment"
        android:label="Погода"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_music"
        android:name="com.example.lab8.ui.slideshow.SlideshowFragment"
        android:label="Музыка"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_charsheet"
        android:name="com.example.lab8.ui.charsheet.CharsheetsPreviewFragment"
        android:label="Мои персонажи"
        tools:layout="@layout/fragment_charsheets_preview" />

    <fragment
        android:id="@+id/nav_create_charsheet"
        android:name="com.example.lab8.ui.charsheet.CreateCharlistFragment"
        android:label="Создание персонажа"
        tools:layout="@layout/fragment_create_charlist" />

    <fragment
        android:id="@+id/nav_charsheet_details"
        android:name="com.example.lab8.ui.charsheet.CharlistDetailsFragment"
        android:label="Лист персонажа"
        tools:layout="@layout/fragment_charlist_details" />
</navigation>